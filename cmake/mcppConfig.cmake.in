@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find dependencies
find_dependency(Threads REQUIRED)

# If SSL was enabled, find OpenSSL
if(@MCPP_ENABLE_SSL@)
    find_dependency(OpenSSL 3.0.0 REQUIRED)
endif()

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/mcppTargets.cmake")

# Check that all required components are found
check_required_components(mcpp)

# Variables for users
set(MCPP_VERSION @PROJECT_VERSION@)
set(MCPP_ENABLE_SSL @MCPP_ENABLE_SSL@)